{% extends 'public_base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="flex items-center min-h-screen md:grid md:grid-cols-2">
	
	{{ include('_components/public/_left_picture.html.twig', {'picture': 'images/left_base_register_picture.jpeg'}) }}
	
	<div class="container w-3/4 mx-auto">

		{{ include('_components/public/_logo_banner.html.twig') }}

		<div class="flex w-3/4 mx-auto mb-4 text-gray-400 justify-evenly md:w-3/5 lg:w-2/4">
			<a href="{{ path('app_login') }}"><h1 class="mb-3 h3 font-weight-normal hover:border-amberYellow hover:border-b hover:border-solid hover:text-black">Se connecter</h1></a>
			<span><h1 class="mb-3 text-black border-b border-solid h3 font-weight-normal border-amberYellow">S'enregistrer</h1></span>
		</div>

		<div class="grid gap-8 mx-auto mb-4 input-container md:w-3/5 lg:w-2/4">

			{{ form_errors(registrationForm) }}
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email, { label: 'Email de contact' }) }}
			{{ form_row(registrationForm.phone, { label: 'Numéro de téléphone' }) }}
			{{ form_row(registrationForm.infos, { label: "Plus d'informations" }) }}
		
			<div class="mb-4 text-center"><a class="border-b hover:text-amberYellow hover:border-solid border-amberYellow" href="{{ path('public_app_reset_password') }}">Mot de passe oublié ?</a></div>
			<div class="text-center">
				<button type="submit" class="primaryButton">Nous contacter</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% endblock %}