{% extends 'public_base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

<div class="flex items-center min-h-screen md:grid md:grid-cols-2">
	
	{{ include('_components/public/_left_picture.html.twig', {'picture': 'images/left_base_reset_password_picture.jpeg'}) }}
	
	<div class="container w-full mx-auto">

		{{ include('_components/public/_logo_banner.html.twig') }}

		<div class="flex w-3/4 mx-auto mb-4 text-gray-400 justify-evenly md:w-3/5 lg:w-2/4">
			<a href="{{ path('app_login') }}"><h1 class="mb-3 border-b border-solid border-b-transparent h3 font-weight-normal hover:border-b-amberYellow hover:text-black">Se connecter</h1></a>
			<a href="{{ path('public_app_register') }}"><h1 class="mb-3 border-b border-solid border-b-transparent h3 font-weight-normal hover:border-b-amberYellow hover:text-black">S'enregistrer</h1></a>
		</div>

		{{ form_errors(resetPasswordForm) }}
		
		<div class="grid gap-8 mx-auto mb-4 input-container md:w-3/5 lg:w-2/4">
			{{ form_start(resetPasswordForm, {'attr': {'class': 'w-3/4 mx-auto'}}) }}
			{{ form_row(resetPasswordForm.email, { label: 'Email du compte' }) }}
			<button type="submit" class="primaryButton w-full">Réinitialiser le mot de passe</button>
			{{ form_end(resetPasswordForm) }}
		</div>
	</div>
</div>
{% endblock %}