<div class="relative my-6 overflow-x-auto ">
	<table class="w-full text-sm text-left text-gray-500 rtl:text-right dark:text-gray-400">
		<thead class="text-xs text-gray-700 uppercase border-t border-b bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
			<tr>
				<th scope="col" class="px-6 py-3">
					Produit
				</th>
				<th scope="col" class="px-6 py-3">
					Description
				</th>
				<th scope="col" class="px-6 py-3">
					Prix
				</th>
				<th scope="col" class="mr-4 py-3 flex justify-end">
					Actions
				</th>
			</tr>
		</thead>
		<tbody>
			{% for product in pagination %}
				<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
					<td class="px-6 py-4">
						{{ product.name }}
					</td>
					<td class="px-6 py-4">
						{{ product.description }}
					</td>
					<td class="px-6 py-4">
						{{ product.price }}€
					</td>
					<td class="flex justify-end mr-4 text-lg font-medium dark:text-white">
						<button id="dropdownHoverButton" data-dropdown-toggle="dropdownHoverProduct{{product.id}}" data-dropdown-trigger="hover" class="" type="button">...
						</button>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">Aucun produit trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{ include('_components/front/global/_pagination.html.twig') }}
</div>

<!-- Product Dropdown menu -->
{% for product in pagination %}
	<div id="dropdownHoverProduct{{product.id}}" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
		<ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownHoverButton">
			<li>
				<a href="{{ path('front_company_app_product_details', {'slug': product.slug}) }}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Détails</a>
			</li>
			<li>
				<a href="{{ path('front_company_app_product_edit', {'slug': product.slug}) }}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Modifier</a>
			</li>
			<li>
				{{ include('_components/front/product/_delete_form.html.twig', {'productSlug': product.slug}) }}
			</li>
		</ul>
	</div>
{% endfor %}
