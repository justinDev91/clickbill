<div class="relative my-6 overflow-x-auto ">
	<table class="w-full text-sm text-left text-neutral-500 rtl:text-right dark:text-neutral-400">
		<thead class="table-auto text-xs text-neutral-700 uppercase border-t border-b bg-neutral-50 dark:bg-neutral-700 dark:text-neutral-400">
			<tr>
				<th scope="col" class="px-6 py-3">
					Produit
				</th>
				<th scope="col" class="px-6 py-3">
					Description
				</th>
				<th scope="col" class="px-6 py-3">
					Prix
				</th>
				<th scope="col" class="mr-4 py-3 flex justify-end">
					Actions
				</th>
			</tr>
		</thead>
		<tbody>
			{% for product in pagination %}
				<tr class="bg-white border-b dark:bg-neutral-800 dark:border-neutral-700">
					<td class="px-6 py-4">
						{{ product.name }}
					</td>
					<td class="px-6 py-4">
						{{ product.description }}
					</td>
					<td class="px-6 py-4">
						{{ product.price }}€
					</td>
					<td class="text-lg text-center font-medium dark:text-white">
						<button id="dropdownHoverButton" data-dropdown-toggle="dropdownHoverProduct{{product.id}}" data-dropdown-trigger="hover" class="p-3" type="button">
							<svg class="w-6 h-6" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M64 360a56 56 0 1 0 0 112 56 56 0 1 0 0-112zm0-160a56 56 0 1 0 0 112 56 56 0 1 0 0-112zM120 96A56 56 0 1 0 8 96a56 56 0 1 0 112 0z"/></svg>
						</button>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">Aucun produit trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{ include('_components/front/global/_pagination.html.twig') }}
</div>

<!-- Product Dropdown menu -->
{% for product in pagination %}
	<div id="dropdownHoverProduct{{product.id}}" class="z-10 hidden bg-white divide-y divide-neutral-100 rounded-lg shadow w-44 dark:bg-neutral-700">
		<ul class="py-2 text-sm text-neutral-700 dark:text-neutral-200" aria-labelledby="dropdownHoverButton">
			<li>
				<a href="{{ path('front_company_app_product_show', {'slug': product.slug}) }}" class="block px-4 py-2 hover:bg-neutral-100 dark:hover:bg-neutral-600 dark:hover:text-white">Détails</a>
			</li>
			<li>
				<a href="{{ path('front_company_app_product_edit', {'slug': product.slug}) }}" class="block px-4 py-2 hover:bg-neutral-100 dark:hover:bg-neutral-600 dark:hover:text-white">Modifier</a>
			</li>
			<li>
				{{ include('_components/front/product/_delete_form.html.twig', {'productSlug': product.slug}) }}
			</li>
		</ul>
	</div>
{% endfor %}
