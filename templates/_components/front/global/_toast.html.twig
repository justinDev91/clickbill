<div id="toast-error" class="fixed z-10 flex items-center w-full max-w-sm p-4 -translate-x-1/2 border rounded-lg shadow left-1/2 top-4 text-neutral-500 bg-neutral-100 border-neutral-300 dark:text-neutral-400 dark:bg-neutral-800 dark:border-neutral-600" role="alert">
    <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8
    {% if state == 'sucess' %} text-green-500 dark:text-green-400/50 {% endif %}
    {% if state == 'error' %} text-red-500 dark:text-red-400/50 {% endif %} ">
        {% if state == 'sucess' %}
            <i class="fa-solid fa-circle-check text-2xl ms-3"></i>
        {% endif %}
        {% if state == 'error' %}
        	<i class="fa-solid fa-circle-xmark text-2xl ms-3"></i>
        {% endif %}
    </div>
    <div class="text-sm font-normal ms-3 text-neutral-900 dark:text-neutral-300">{{ message }}</div>
    <button type="button" data-dismiss-target="#toast-error" class="ms-auto -mx-1.5 -my-1.5 bg-neutral-100 text-neutral-400 hover:text-neutral-900 rounded-lg focus:ring-0 p-1.5 hover:bg-neutral-100 inline-flex items-center justify-center h-8 w-8 dark:text-neutral-500 dark:hover:text-white dark:bg-neutral-800 dark:hover:bg-neutral-700" aria-label="Close">
        <i class="fa-solid fa-xmark text-normal ms-3"></i>
    </button>
</div>