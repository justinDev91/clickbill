{% extends 'layout/front_office.html.twig' %}

{% block title %}
	Tableau de bord
{% endblock %}

{% block content %}
	<h1 class="pageTitle">Tableau de bord</h1>
	<div>
		<div class="grid grid-cols-4 gap-3 mb-2">
			<dl class="bg-orange-100 dark:bg-orange-600/30 rounded-lg flex flex-col items-center justify-center h-[78px]">
				<dt class="flex items-center justify-center w-8 h-8 mb-1 text-sm font-medium text-orange-600 bg-orange-200 rounded-full dark:bg-orange-700/50 dark:text-orange-300">{{data.totalClients ?? 0}}</dt>
				<dd class="text-lg font-medium text-orange-600 dark:text-orange-400">Clients</dd>
			</dl>
			<dl class="bg-teal-100 dark:bg-teal-600/30 rounded-lg flex flex-col items-center justify-center h-[78px]">
				<dt class="flex items-center justify-center w-8 h-8 mb-1 text-sm font-medium text-teal-600 bg-teal-200 rounded-full dark:bg-teal-700/50 dark:text-teal-300">{{data.totalQuotes ?? 0}}</dt>
				<dd class="text-lg font-medium text-teal-600 dark:text-teal-400">Devis</dd>
			</dl>
			<dl class="bg-blue-100 dark:bg-blue-600/30 rounded-lg flex flex-col items-center justify-center h-[78px]">
				<dt class="flex items-center justify-center w-8 h-8 mb-1 text-sm font-medium text-blue-600 bg-blue-200 rounded-full dark:bg-blue-700/50 dark:text-blue-300">{{data.totalBills ?? 0}}</dt>
				<dd class="text-lg font-medium text-blue-600 dark:text-blue-400">Factures</dd>
			</dl>
			<dl class="bg-purple-100 dark:bg-purple-600/30 rounded-lg flex flex-col items-center justify-center h-[78px]">
				<dt class="flex items-center justify-center w-8 h-8 mb-1 text-sm font-medium text-purple-600 bg-purple-200 rounded-full dark:bg-purple-700/50 dark:text-purple-300">{{data.totalUnpaidBills ?? 0}}</dt>
				<dd class="text-lg font-medium text-purple-600 dark:text-purple-400">Factures impay√©es</dd>
			</dl>
		</div>
	</div>
	<div class="mt-8">
		<div class="grid grid-cols-3 gap-16">
			<dl class="flex flex-col items-center justify-center rounded-lg">
				{{ render_chart(barChart) }}
			</dl>
			<dl class="flex flex-col items-center justify-center rounded-lg ">
				{{ render_chart(lineChart) }}
			</dl>
			<dl class="flex flex-col items-center justify-center rounded-lg">
				<div class="w-80">
					{{ render_chart(doughnutChart) }}
				</div>
			</dl>
		</div>
	</div>

	{{ include('_components/front/company/_table.html.twig',{ clientsInteractions : data.clientsInteractions }) }}
{% endblock %}
