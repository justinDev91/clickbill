{% extends 'base.html.twig' %}

{% block title %}Devis #{{ quote.id }}
{% endblock %}

{% block stylesheets %}
	<style>
		.container {
			margin: 0 auto;
			padding: 8px;
		}

		.section-title {
			font-size: 1.5rem;
			font-weight: bold;
		}

		.client-info {
			font-size: 1rem;
			color: #4a5568;
		}

		.table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 2rem;
		}

		.table th,
		.table td {
			padding: 0.75rem;
			text-align: left;
		}

		.table th {
			background-color: #F8F8F8;
		}

		.table td {
			border-color: #cbd5e0;
			text-align: right;
		}

		.container-header {
			display: flex;
			justify-content: space-between;
		}
		.container-header > div {
			flex: 1;
			padding: 5px;
		}
		.left-column {
			text-align: left;
		}
		.right-column {
			text-align: right;
			margin-top: -10rem;
		}

		.table-header th {
			text-align: center;
		}

		.table-total-amount {
			text-align: right;
			margin-top: 1rem;
			font-weight: bold;
		}

		.quote-info {
			margin-bottom: 1rem;
		}
	</style>

{% endblock %}

{% block body %}
	<div class="container">
		<div
			class="container-header">
			<!-- Company Information -->
			<div class="left-column">
				<div class="section-title">{{ quote.company.name ?? '' }}</div>
				<div>{{ quote.company.address ?? '' }}</div>
				<div>{{ quote.company.email ?? '' }}</div>
			</div>

			<!-- Client Information -->
			<div class="right-column">
				<div class="section-title">
					{{ quote.client.firstName ?? '' }}
					{{ quote.client.lastName ?? '' }}
				</div>
				<div>{{ quote.client.address ?? '' }}
				</div>
				<div>
					{{ quote.client.email ?? '' }}
				</div>
			</div>
		</div>
		<!-- Quote Information -->
		<div style="margin-top: 5rem;">
			<h1 class="section-title">Devis #{{ quote.id }}</h1>
			<div class="client-info">
				<div class="quote-info">
					Date :
					{{ quote.createdAt ? quote.createdAt|date('d/m/Y') : '' }}
				</div>

			</div>
			<!-- Products Information -->
			<div class="section">
				<table class="table">
					<thead class="table-header">
						<tr>
							<th>Description</th>
							<th>Quantité</th>
							<th>Unité</th>
							<th>Prix unitaire</th>
							<th>TVA</th>
							<th>Montant HT</th>
						</tr>
					</thead>
					<tbody>
						{% for product in quote.productsInfo ?? [] %}
							<tr>
								<td style="text-align: left;">{{ product.description }}</td>
								<td>{{ product.quantity }}</td>
								<td>{{ product.unit }}</td>
								<td>{{ product.unitPrice }}
									€</td>
								<td>{{ product.tva }}
									%</td>
								<td>{{ product.amount }}
									€</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<div class="table-total-amount ">Total Amount Due:
					{{quoteTotalAmount}}€
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
