{% extends 'layout/front_office.html.twig' %}

{% block title %}
    Produit    
{% endblock %}

{% block content %}
    <a href="{{ path('front_company_app_product_index') }}" class="backToPrevious">
        <i class="fa-solid fa-arrow-left text-2xl"></i>
	</a>
    <h1 class="pageTitle">
        {{ product.name }}
    </h1>
    <div>
        {% if product.imageName %}
            <img src="{{ asset('uploads/images/product/picture/' ~ product.imageName) }}" alt="{{ product.name }}">
        {% else %}
            <p>Aucune image disponible</p>
        {% endif %}
        {{ product.description}}
    </div>
{% endblock %}