{% extends 'layout/front_office.html.twig' %}

{% block title %}
	Catégories
{% endblock %}

{% block content %}
	<h1 class="pageTitle">
		Catégories
	</h1>
	{{ include('front/search/index.html.twig', {'filter': 'Status'}) }}

	{% for error in errors %}
        {{ include('_components/front/global/_toast.html.twig', {
        'message' : error, 
        'state' : 'error'} ) }}
    {% endfor %}
    {% for succes in success %}
        {{ include('_components/front/global/_toast.html.twig', {
            'message' : succes, 
            'state' : 'sucess'} ) }}
    {% endfor %}

	<a href="{{ path('front_company_app_category_new')}}" class="primaryButton w-auto" >
		Ajouter une catégorie
	</a>
	{{ include('_components/front/category/_table.html.twig') }}
{% endblock %}
