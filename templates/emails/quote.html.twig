            <div class="btn-container">
                <a href="{{link_to_refuse}}" class="btn btn-red">Rejeter le devis</a>
                <a href="{{link_to_accept}}" class="btn btn-yellow">Accepter le devis</a>
            </div>
        </div>
    </div>
</body>
</html>